<% provide(:title, 'Authors') %>

<h1>List of all Authors</h1>
<%= will_paginate %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Add new Author', :action => 'new' %>
    <table class="table table-bordered">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
    <% @authors.each do |author| %>
      <tr>
      
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <% if user_signed_in? %>
        <td class="actions"><%= link_to("Show", {:action => 'show', :id => author.id}) %> |
            <%= link_to("Edit",{:action => 'edit', :id => author.id}) %> |
            <%= link_to("Delete", author, method: :delete, data: {confirm: 'Are you sure you want to delete this author?'}) %>
        </td>
      </tr>
      <% end %>
    <% end %>
    
    </table>
<%= will_paginate %>
    
   
    
  </div>
</div>