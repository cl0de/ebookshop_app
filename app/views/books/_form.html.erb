 <%= form_for(@book, html: { multipart: true }) do |f| %>
   
        <%= render 'shared/messages_error', object: f.object  %>
    <div class="row">
      <div class="small-2 columns">  
        <span class="right"><%= f.label :title %></span>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :title  %>
      </div>
    </div>
    <div class="row">
      <div class="small-2 columns">
        <span class="right"><%= f.label :authors %></span>
      </div>
      <div class="small-10 columns">
        <%= f.collection_select(:author_id, Author.all, :id, :name, {:selected => 1}, {:prompt => true, :multiple => true, :size => 5}) %>
      </div>
    </div>
    <div class="row">
      <div class="small-2  columns">
        <span class="right"><%= f.label :isbn %></span>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :isbn  %>
      </div>
    </div>    
    <div class="row">
      <div class="small-2  columns">
        <span class="right"><%= f.label :description %></span>
      </div>  
      <div class="small-10 columns">
        <%= f.text_area :description, :size => '40x10'  %>
      </div>
    </div>
    <div class="row">
      <div class="small-2  columns">
        <span class="right"><%= f.label :price %></span>
      </div>
      <div class="small-10 columns">
        <%= f.text_field :price  %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <span class="right"><%= f.label :cover_image  %></span>
      </div>
      <div class="small-9 columns">
        <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'  %>
        <%= f.hidden_field :picture_cache %>
        </span>
      </div>
    </div>

     <div class="small-9 small-offset-3 columns">  
        <%= f.submit "Enter new Book", class: 'button tiny secondary' %>
     </div>
  <% end %>
  
<!-- to issue an alert if a user tries to upload an image thatâ€™s too big -->

<script type="text/javascript">
  $('#book_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
