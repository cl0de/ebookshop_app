<header>
 <nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "eBookShop", root_path, id: "logo" %></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <li class="active"><%= link_to "Home", root_path %></li>
      
      <li><%= link_to "Authors", authors_path %></li>
      <li><%= link_to "Books", books_path %></li>
      <li><%= link_to "About", :controller => 'static_pages', :action => "about" %></li>
      
      <% if user_signed_in? %>
        <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_path  %></li> | 
        <li><%= link_to 'Register', new_user_registration_path %>
      <% end %>
      <% if @count.to_i > 5 %>
				<li>Currently viewing the catalog for the <%= pluralize(@count, 'time') %></li>
			<% end %>
    </ul>
    <div class="counter">
    </div>
  </section>
</nav>
</header>
    
    